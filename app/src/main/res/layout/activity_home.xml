<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8FFFFFF"
    android:orientation="vertical"
    android:padding="20sp">

    <Space
        android:layout_width="match_parent"
        android:layout_height="57dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/captura_de_tela_2024_05_07__s_17_24_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="219dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:text="InovaMobil"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:text="Olá, Bruno Muniz."
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginBottom="1dp"
        android:backgroundTint="#000000"
        android:backgroundTintMode="screen" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="306dp"
        app:srcCompat="@drawable/mapa_da_ciclofaixa_parque_ibirapuera" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="26dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Para utilizar os monociclos por favor aproxime-se de um e scaneie o código disponibilizado na parte inferior do produto."
        android:textAlignment="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:onClick="callCamera"
        android:text="Scanear QrCode" />

    <Button
        android:id="@+id/button2"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:text="Preciso de ajuda" />

</LinearLayout>